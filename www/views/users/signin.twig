{% extends "layout/index.twig" %}

{% block content %}

<h1>{% block title %}{{ title }}{% endblock %}</h1>
    {% if message %}
    <p>{{ message }}</p>
    {% endif %}  
<form method="POST" name="{{title}}" action="/signin">
<div class="form-group">
    <label for="mail">Votre courriel</label>
    <input id="mail" type="email" name="mail" value="{{user.mail}}" required></div>
<div class="form-group">
    <label for="password">votre mot de passe</label>
    <input id="password" type="password" name="password" value="" required></div>
<button type="submit" name="loginsubmit">Envoyez</button>
</form>
{% endblock content %}