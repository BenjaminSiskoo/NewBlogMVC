{% extends "layout/index.twig" %}

{% block content %}


    {% if message %}
    <p>{{ message }}</p>
    {% endif %}
<section class="d-flex flex-column align-items-center justify-content-center section-login ">
<h1 class="text-center mb-2">{% block title %}{{ title }}{% endblock %}</h1>
<form method="POST" name="{{title}}" action="/signin" class="p-2 w-sm-25 card d-flex align-items-center justify-content-center">
<div class="form-group">
    <label for="mail" class="text-center w-100">Votre courriel</label>
    <input id="mail" class="form-control" type="email" name="mail" value="{{user.mail}}" required></div>
<div class="form-group">
    <label for="password" class="text-center w-100">Votre mot de passe</label>
    <input id="password" class="form-control" type="password" name="password" value="" required></div>
<button type="submit" name="loginsubmit">Envoyez</button>
</form>
</section>
{% endblock content %}